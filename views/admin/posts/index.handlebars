<h1>ALL POSTS</h1>

<table class="table table-bordered">

    <thead>
        <tr>

            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>View post</th>
            <th>Allow Comments</th>
            <th>Date</th>
        </tr>
    </thead>

    <tbody>

        {{#each posts}}

        <tr>

            <td>{{id}}</td>
            <td> <img height="50" class="img-responsive" src="/uploads/{{file}}" alt="">  </td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>{{allowComments}}</td>
            <td>{{generateTime date 'MMMM do YYYY'}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">EDIT</a></td>
            <td>
              <form  action="/admin/posts/{{id}}?_method=DELETE" method="POST" >

                 <button type="submit" class="btn btn-danger">DELETE</button>

              </form>


            </td>


        </tr>


        {{/each}}
    </tbody>



</table>